{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": ["error", 2],
        "no-console": "warn",
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "react/display-name": false,
        "react/prop-types": false
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "commonjs": true
    }
}
